<h3>Przeglądanie złożonej reklamacji</h3>

<p >
  <strong>Reklamacja złożona w sklepie:</strong>

      <%= link_to @complaint.article.receipt.shop.name, @complaint.article.receipt.shop %>

</p>

<p >
  <strong>Zareklamowany artykuł:</strong>

  <%= @complaint.article.name_with_brand %>

</p>

<p >
  <strong>Powód reklamacji:</strong>

  <%= @complaint.reason %>

</p>

<p >
  <strong>Status reklamacji:</strong>

  <%= @complaint.complaint_status.name %>

</p>

<p> <strong>Postęp: </strong>

    <% if @complaint.complaint_status_id==1 %>

    <div class="progress large-9 success round progresswidth"> <span class="meter" style="width: 20%"></span> </div>

    <% end %>

    <% if @complaint.complaint_status_id==2 %>
    <div class="progress large-9 alert round progresswidth"> <span class="meter" style="width: 100%"></span> </div>
    <% end %>

    <% if @complaint.complaint_status_id==3 %>
    <div class="progress large-9 success round progresswidth"> <span class="meter" style="width: 50%"></span> </div>
    <% end %>

    <% if @complaint.complaint_status_id==4 %>
    <div class="progress large-9 success round progresswidth"> <span class="meter" style="width: 100%"></span> </div>
    <% end %>

    <% if @complaint.complaint_status_id==5 %>
    <div class="progress large-9 alert round progresswidth"> <span class="meter" style="width: 100%"></span> </div>
    <% end %>


</p>









