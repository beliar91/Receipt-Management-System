<h1>Paragony</h1>


<table>
  <thead>
    <tr>
      <th>Zdjęcie paragonu</th>
      <th>Data zakupów</th>
      <th>Artykuł</th>
      <th>Marka</th>
      <th>Sklep</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receipts.each do |receipt| %>
      <tr>
        <td> <% if receipt.file.present?%> <%= image_tag receipt.file.url(:small) %></td>
            <% else %><%= "brak" %>
        <%end%>
        <td><%= I18n.localize(receipt.shopping_date) %></td>
        <td><%= receipt.article %></td>
        <td><%= receipt.brand %></td>
        <td><%= receipt.shop.name %></td>
        <td><%= link_to 'Szczegóły', receipt, class: "button small success" %></td>
        <td><%= link_to 'Edytuj', edit_receipt_path(receipt), class: "button small" %></td>
        <td><%= link_to 'Usuń', receipt, method: :delete, data: { confirm: 'Jesteś pewien?' }, class: "button small alert"   %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Nowy paragon', new_receipt_path, class: "button" %>

