<h2>Zarejestruj się</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, class: "textarea" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", label: "Hasło (musi posiadać co najmniej 8 znaków)", class: "textarea" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "textarea", label: "Potwierdzenie hasła" %>
  </div>

  <div class="actions">
    <%= f.submit "Zarejestruj się" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
